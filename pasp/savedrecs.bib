@article{ ISI:000178373600004,
Author = {Archibald, EN and Jenness, T and Holland, WS and Coulson, IM and Jessop,
   NE and Stevens, JA and Robson, EI and Tilanus, RPJ and Duncan, WD and
   Lightfoot, JF and Coulson, IM and Robson, EI and Holland, WS and Duncan,
