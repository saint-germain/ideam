Author = {Buffa, F. and Bolli, P. and Sanna, G. and Serra, G.},
Title = {{An atmosphere monitoring system for the Sardinia radio telescope}},
Journal = {{MEASUREMENT SCIENCE AND TECHNOLOGY}},
Year = {{2017}},
Volume = {{28}},
